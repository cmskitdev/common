{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "strict": true,
    "strictNullChecks": false,
    "target": "ES2022",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "$client/*": ["./src/client/*"],
      "$content": ["./src/content"],
      "$content/*": ["./src/content/*"]
    }
  },
  "baseUrl": ".",
  "paths": {
    "$client/*": ["./src/client/*"],
    "$content": ["./src/content"],
    "$content/*": ["./src/content/*"]
  },
  "exclude": ["**/*.spec.ts"],
  "include": ["./src/**/*"]
}
