{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "strict": true,
    "strictNullChecks": false,
    "target": "ES2022"
  },
  "baseUrl": ".",
  "paths": {
    "$client/*": ["./src/client/*"],
    "$content": ["./src/content"],
    "$content/*": ["./src/content/*"]
  },
  "exclude": ["**/*.spec.ts"],
  "include": ["./src/**/*"]
}
